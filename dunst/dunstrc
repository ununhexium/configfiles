# vim:ft=cfg
[global]
    # message
    font = FiraCode Nerd Font 16
    format = "<big><b>%s</b></big>\n<small>%a</small>\n%p %b"
    sort = urgency_descending
    indicate_hidden = yes
    alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = end
    ignore_newline = no

    # popup
    origin=top-center
    width=(300,9999)
    scale=1
    idle_threshold = 0
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 50

    # style
    shrink = no
    transparency = 0
    show_indicators = yes
    line_height = 2
    separator_color = auto
    horizontal_padding = 20
    progress_bar = true
    text_icon_padding = 16
    icon_theme = "Adwaita"
    enable_recursive_icon_lookup = true

    # external apps
    dmenu = /usr/bin/dmenu -p dunst:

[frame]
    width = 1
    color = "#aaaaaa"

[shortcuts]
    # close notification
    # close = mod4+space

    # close all notifications
    #close_all = ctrl+shift+space

    # redisplay last message(s)
    # On the US keyboard layout 'grave' is normally above TAB and left of '1'.
    # history = mod4+plus

    # context menu
    # context = mod4+shift+plus

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the '#' and following  would be interpreted as a comment.
    background = "#222221"
    foreground = "#a9aca6"
    timeout = 10

[urgency_normal]
    background = "#000000"
    foreground = "#295183"
    timeout = 10

[urgency_critical]
    background = "#a30000"
    foreground = "#ffffff"
    timeout = 0



# No crazy mouse
focus_follows_mouse no

# Keyboard config

input type:keyboard {

  # Capslock key should work as escape key
  # See /usr/share/X11/xkb/rules/xorg.lst for options
  xkb_options caps:escape

  xkb_numlock enabled

  repeat_delay 200
  repeat_rate 30
}

# Mouse config

input type:mouse {
    #tap enabled
    natural_scroll disabled
    #dwt enabled
    accel_profile "flat"
    pointer_accel -1
}

